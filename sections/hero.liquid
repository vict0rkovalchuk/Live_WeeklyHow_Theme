<section class="pt-24">
  <div class="px-12 mx-auto max-w-7xl">
    <div class="w-full mx-auto text-left md:w-11/12 xl:w-9/12 md:text-center">
      <h1 class="mb-8 text-4xl font-extrabold leading-none tracking-normal text-gray-900 md:text-6xl md:tracking-tight">
        {{ section.settings.hero_heading_title }}
      </h1>
      <p class="px-0 mb-8 text-lg text-gray-600 md:text-xl lg:px-24">
        {{ section.settings.hero_text }}
      </p>
      <div class="mb-4 space-x-0 md:space-x-2 md:mb-8">
        {% if section.settings.hero_primary_button_text and section.settings.hero_primary_button_url %}
          <a href="{{ section.settings.hero_primary_button_url }}" class="inline-flex items-center justify-center w-full px-6 py-3 mb-2 text-lg text-white bg-green-400 rounded-2xl sm:w-auto sm:mb-0">
            {{ section.settings.hero_primary_button_text }}
            {% render 'icon-arrow-right' %}
          </a>
        {% endif %}

        {% if section.settings.hero_secondary_button_text and section.settings.hero_secondary_button_url %}
          <a href="{{ section.settings.hero_secondary_button_url }}" class="inline-flex items-center justify-center w-full px-6 py-3 mb-2 text-lg bg-gray-100 rounded-2xl sm:w-auto sm:mb-0">
            {{ section.settings.hero_secondary_button_text }}
            {% render 'icon-light-bulb' %}
          </a>
        {% endif %}
      </div>
    </div>
    <div class="w-full mx-auto mt-20 text-center md:w-10/12">
      <div class="relative z-0 w-full mt-8">
        <div class="relative overflow-hidden shadow-2xl">
          <div class="flex items-center flex-none px-4 bg-green-400 rounded-b-none h-11 rounded-xl">
            <div class="flex space-x-1.5">
              <div class="w-3 h-3 border-2 border-white rounded-full"></div>
              <div class="w-3 h-3 border-2 border-white rounded-full"></div>
              <div class="w-3 h-3 border-2 border-white rounded-full"></div>
            </div>
          </div>
          {% if section.settings.hero_image %}
            {{ section.settings.hero_image | image_url: width: 1000 | image_tag: class: 'w-full h-auto', loading: 'lazy' }}
          {% else %}
            <div class="bg-white">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-auto px-5 py-10 md:px-10 md:py-20' }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Image"
      },
      {
        "type": "html",
        "id": "hero_heading_title",
        "default": "<span>Start</span> <span class=\"block w-full py-2 text-transparent bg-clip-text leading-12 bg-gradient-to-r from-green-400 to-purple-500 lg:inline\">Shreking Havoc</span> <span>around your business ?</span>",
        "label": "Heading Title",
        "placeholder": "Enter the heading title for the hero"
      },
      {
        "type": "textarea",
        "id": "hero_text",
        "default": "Start gaining the traction you've always wanted with our next-level templates and designs.",
        "label": "Paragraph",
        "placeholder": "Describe here your hero section"
      },
      {
        "type": "text",
        "id": "hero_primary_button_text",
        "default": "Get started",
        "label": "Primary Button Text",
        "placeholder": "Type the text for the primary button"
      }, {
        "type": "url",
        "id": "hero_primary_button_url",
        "label": "Primary Button URL",
        "info": "Enter the URL for the primary button"
      }, {
        "type": "text",
        "id": "hero_secondary_button_text",
        "default": "Learn more",
        "label": "Secondary Button Text",
        "placeholder": "Type the text for the secondary button"
      }, {
        "type": "url",
        "id": "hero_secondary_button_url",
        "label": "Secondary Button URL",
        "info": "Enter the URL for the secondary button"
      }
    ]
  }
{% endschema %}