<div class="my-10">
  <h1 class="text-xl font-bold my-5 text-center">Customer Login</h1>
  {% form 'customer_login'
    , novalidate: novalidate
    , class: 'flex flex-col gap-y-5' %}
    {% if form.errors %}
      <div class="w-1/2 px-4 py-2 m-auto bg-red-500 font-medium rounded">
        <span>{{ form.errors | default_errors }}</span>
      </div>
    {% endif %}

    <div class="flex flex-col gap-y-2 justify-start">
      <label for="customerEmail">Email address</label>
      <input
        id="customerEmail"
        type="email"
        name="customer[email]"
        placeholder="Please enter your email address"
        class="p-4 border-2 border-green-500 rounded ">
    </div>

    {% if form.password_needed %}
      <div class="flex flex-col gap-y-2 justify-start">
        <label for="customerPassword">Password</label>
        <input
          id="customerPassword"
          type="password"
          name="customer[password]"
          placeholder="Please enter your password"
          class="p-4 border-2 border-green-500 rounded ">
      </div>
    {% endif %}

    <input
      type="submit"
      value="Sign in"
      class="bg-green-700 hover:bg-green-900 font-medium text-white py-3 px-5 rounded cursor-pointer">
  {% endform %}
</div>