<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow-md rounded-lg max-w-sm">
    <a href="#">
      {{ index | prepend: "product-" | placeholder_svg_tag: "w-full rounded-t-lg p-8" }}
    </a>
    <div class="px-5 pb-5">
      <a href="#">
        <h3 class="text-gray-900 font-semibold text-xl tracking-tight">Product title</h3>
      </a>
      <div class="flex items-center mt-2.5 mb-5">
        {% for i in (1..5) %}
          {% render 'icon-star' %}
        {% endfor %}
        <span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded ml-3">5.0</span>
      </div>
      <div class="flex items-center justify-between">
        <span class="text-3xl font-bold text-gray-900">{{ '49989' | money }}</span>
        <a href="{{ product.url }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Add 
						to cart</a>
      </div>
    </div>
  </div>
</div>